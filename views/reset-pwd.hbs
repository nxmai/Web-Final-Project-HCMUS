                    {{#if error_msg}}
                    {{error_msg}}
                    {{/if}}

                    {{#if success_msg}}
                    {{success_msg}}
                    {{/if}}
                    
                    {{message}}
                    <h5 id="get-notice" style="font-weight: 600;"><span>{{notice}}</span></h5>
                    <!-- Login Form -->
                    <form action="/user/reset/{{id}}" method="POST" id="reset-form">
                        <div class="row">
                            <div class="col-12 mb-30"><input id="password" name="password" type="password" placeholder="New password"></div>
                            <div class="col-12 mb-20"><input id="confirm-password" name="cfpassword" type="password" placeholder="Confirm password"></div>
                            <div class="col-12 mb-15">
                                
                            </div>
                            <div class="col-12"><input type="submit" value="CONFIRM"></div>
