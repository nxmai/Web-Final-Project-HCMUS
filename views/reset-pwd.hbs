{{#section 'js'}}
    <script>
        $('#reset-form').on('submit', function(e) {
            e.preventDefault();
            console.log('ssdfsdf');
            const password = $('#password').val();
            if(password.length < 8){
                $('#get-notice').html('Password length must be >= 8 character');
                return;
            }

            const cfpassword = $('#confirm-password').val();
            if(password != cfpassword){
                $('#get-notice').html('You must be confirm the right password');
                return;
            }

            $('#reset-form').off('submit').submit();
        })
    </script>
{{/section}}

<!-- Login Section Start -->
<div class="login-section section mt-90 mb-90">
    <div class="container">
        <div class="row">
            
            <!-- Login -->
            <div class="col-md-6 col-12 d-flex">
                <div class="ee-login">
                    
                    <h3>Reset your password</h3>
